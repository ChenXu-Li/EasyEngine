#shader vertex

#version 430 core
layout (location = 0) in vec3 position;
layout (location = 1) in vec3 color;


out vec3 ourColor;
uniform mat4 projection;
uniform mat4 view;
uniform mat4 model;
void main()
{
    gl_Position = model*view*projection * vec4(position, 1.0f);
    ourColor = color;
}


#shader fragment

#version 430 core

in vec3 ourColor;
out vec4 color;
void main()
{
    color = vec4(ourColor,1.0f);
}