#shader vertex
#version 430 core

layout(location = 0) in vec3 position;

uniform mat4 projection;
uniform mat4 view;
uniform mat4 model;
void main()
{
    gl_Position = projection * view * model * vec4(position, 1.0f);
};


#shader fragment
#version 430 core

uniform vec3 selfcolor;
out vec4 color;


void main()
{
    color = vec4(selfcolor,1.0f); 
};